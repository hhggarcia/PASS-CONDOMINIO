        $(document).ready(function () {
            var montoFacturaOriginal;
            //var montoAnticipo = 0;
            //var datAnticipo;
            //var selectOptionAnticipo = false;

            $('.anticipo-group').hide();
            $('#clienteSelect').change(function () {
                var idCliente = $(this).val();

                $.ajax({
                    url: '/FacturaEmitidas/ObtenerFacturasPorCliente',
                    type: 'GET',
                    data: { id: idCliente },
                    success: function (data) {
                        if (data.length > 0) {
                            $('#facturaSelect').empty();
                            $('#facturaSelect').append('<option value="">Seleccione una factura</option>');
                            $.each(data, function (index, item) {
                                $('#facturaSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                            });
                            $('#facturaMessage').hide();
                        } else {
                            $('#facturaSelect').empty();
                            $('#facturaMessage').show();
                        }

                        // $.each(data, function (index, item) {
                        //     $('#facturaSelect').append('<option value="' + item.Value + '">' + item.Text + '</option>');
                        // });
                    },
                    error: function (error) {
                        console.error('Error al obtener las facturas: ', error);
                    }
                });
            });
            $('#facturaSelect').change(function () {
                var facturaId = $(this).val();

                $.ajax({
                    url: '/FacturaEmitidas/ObtenerFactura',
                    type: 'GET',
                    data: { id: facturaId },
                    success: function (data) {
                        montoFacturaOriginal = parseFloat(data.monto);

                        //$('#montoInput').val(data.monto);
                        $('#concepto').val(data.descripcion);
                        // $('#RetIvaInput').val(data.iva);
                        // $('#RetIslrInput').val(data.islr);

                        // Permitir la edición del campo de monto
                        //$('#montoInput').prop('disabled', false);
                    },
                    error: function (error) {
                        console.error('Error al obtener las facturas: ', error);
                    }
                });
            });

            const checkboxIva = document.getElementById("retIva");
            const checkboxIslr = document.getElementById("retIslr");
            const inputsContainerIva = document.getElementById("inputsContainerIva");
            const inputsContainerIslr = document.getElementById("inputsContainerIslr");

            checkboxIva.addEventListener("change", function () {
                // Si el checkbox está marcado, muestra los inputs; de lo contrario, ocúltalos
                inputsContainerIva.style.display = checkboxIva.checked ? "block" : "none";
            });
            checkboxIslr.addEventListener("change", function () {
                // Si el checkbox está marcado, muestra los inputs; de lo contrario, ocúltalos
                inputsContainerIslr.style.display = checkboxIslr.checked ? "block" : "none";
            });
        });
    </script>

    <script>
        $('.nav-tabs-selector').on('change', function (e) {
            $(this).closest(".tab-area").find('.nav-tabs li a').eq($(this).val()).tab('show');
        });
    </script>

}
