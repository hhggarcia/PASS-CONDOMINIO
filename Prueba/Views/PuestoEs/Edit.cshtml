@model Prueba.Models.PuestoE

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div>
    <a asp-action="Index" asp-route-id="@Model.IdEstacionamiento" class="btn btn-light">Volver</a>
</div>
<div class="row">
    <div class="col-lg-12">
        <!-- Default Card Example -->
        <div class="card shadow mb-4 bg-content-bg">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    Puestos de estacionamientos
                </h6>
            </div>
            <div class="card-body">
                <div class="form form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="IdPuestoE" />
                                    <div class="form-group">
                                        <label asp-for="IdEstacionamiento" class="control-label"></label>
                                        <select asp-for="IdEstacionamiento" class="form-control" asp-items="ViewBag.IdEstacionamiento"></select>
                                        <span asp-validation-for="IdEstacionamiento" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IdPropiedad" class="control-label"></label>
                                        <select asp-for="IdPropiedad" class="form-control" asp-items="ViewBag.IdPropiedad"></select>
                                        <span asp-validation-for="IdPropiedad" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Codigo" class="control-label"></label>
                                        <input asp-for="Codigo" class="form-control" />
                                        <span asp-validation-for="Codigo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Alicuota" class="control-label"></label>
                                        <input asp-for="Alicuota" class="form-control" />
                                        <span asp-validation-for="Alicuota" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
