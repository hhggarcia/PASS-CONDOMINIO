@model Prueba.Models.PagoFacturaEmitida

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Pago Factura Emitida
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdPagoFacturaEmitida" />
                                <div class="form-group">
                                    <label asp-for="IdFactura" class="control-label"></label>
                                    <select asp-for="IdFactura" class="form-control" asp-items="ViewBag.IdFactura"></select>
                                    <span asp-validation-for="IdFactura" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdPagoRecibido" class="control-label"></label>
                                    <select asp-for="IdPagoRecibido" class="form-control" asp-items="ViewBag.IdPagoRecibido"></select>
                                    <span asp-validation-for="IdPagoRecibido" class="text-danger"></span>
                                </div>
                                <div class="form-group pt-2">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
