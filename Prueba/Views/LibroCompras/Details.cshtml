                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.BaseImponible)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.BaseImponible)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ExentoIva)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ExentoIva)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Iva)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Iva)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Igtf)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Igtf)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.RetIva)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RetIva)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.RetIslr)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RetIslr)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Monto)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Monto)
                                </dd>
                                <dt class="col-sm-2">
