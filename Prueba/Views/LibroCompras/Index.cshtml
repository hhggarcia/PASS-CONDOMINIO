@model IEnumerable<Prueba.Models.LibroCompra>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="LibroCompras"
           asp-action="Create">
            Registrar
        </a>
        <a class="btn btn-light mb-3" asp-controller="ComprobanteRetencions"
           asp-action="Index">
            Comprobantes Retenciones I.S.L.R.
        </a>
        <a class="btn btn-light mb-3" asp-controller="CompRetIvas"
           asp-action="Index">
            Comprobantes Retenciones IVA
        </a>
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
        @*         <a type="button" id="create_pdf" value="Generate PDF" href="#" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        PDF
        </a> *@
        @* <button type="button" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm" id="PagosEmitidos">Crear pdf</button> *@

        @* <a value="Export" onclick="fnExcelReport();" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        Excel
        </a> *@
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Libro de Compras
                    </h6>
                    <partial name="_FiltrarFecha" model="@(new Prueba.ViewModels.FiltrarFechaVM())" />

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BaseImponible)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ExentoIva)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Iva)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Igtf)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RetIva)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RetIslr)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NumComprobanteRet)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaComprobanteRet)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FormaPago)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCondominioNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdFacturaNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BaseImponible)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ExentoIva)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Iva)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Igtf)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RetIva)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RetIslr)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Monto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumComprobanteRet)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaComprobanteRet)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FormaPago)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCondominioNavigation.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdFacturaNavigation.NumFactura)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
