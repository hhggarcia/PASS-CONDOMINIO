@model IEnumerable<Prueba.Models.Fondo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        @*<h1 class="h3 mb-0 text-gray-800">Pagos Emitidos</h1>*@

        <a class="btn btn-light mb-3"
           asp-action="Create">
            Crear Nuevo
        </a>
        <a class="btn btn-light mb-3"
        asp-controller="RelacionGastos"
           asp-action="TransaccionesDelMes">
            Volver
        </a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Fondos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Porcentaje)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Monto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaInicio)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaFin)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCodCuentaNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Porcentaje)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Monto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaInicio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaFin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCodCuentaNavigation.IdCodCuenta)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdFondo">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdFondo">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdFondo">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
