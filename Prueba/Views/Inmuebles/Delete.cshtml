@model Prueba.Models.Inmueble

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Inmuebles
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">
                                <h6>Are you sure you want to delete this?</h6>
                                <div>
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.IdZona)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.IdZona)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Nombre)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TotalPropiedad)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TotalPropiedad)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.IdCondominioNavigation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.IdCondominioNavigation.IdCondominio)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.IdInmuebleNavigation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.IdInmuebleNavigation.IdZona)
                                        </dd>
                                    </dl>

                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="IdInmueble" />
                                        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
