@section Scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.min.js"></script>
    <script>
        // $(document).on('change', '#facturaSelect', function () {
        //     var facturaId = $(this).val();
        //     console.log('ID de factura seleccionado:', facturaId); // Agrega esta línea para depurar

        //     $.ajax({
        //         url: '/PagosEmitidos/ObtenerFactura',
        //         type: 'GET',
        //         data: { facturaId: facturaId },
        //         success: function (data) {
        //             $('#montoInput').val(data.monto);
        //             // Permitir la edición del campo de monto
        //             $('#montoInput').prop('readonly', false);
        //         },
        //         error: function (error) {
        //             console.error('Error al obtener las facturas: ', error);
        //         }
        //     });
        // });
        $(document).ready(function () {
            var montoFacturaOriginal;
            var montoAnticipo =0; 
            var datAnticipo;
            var selectOptionAnticipo = false;

            $('.anticipo-group').hide();
            $('#proveedorSelect').change(function () {
                var proveedorId = $(this).val();

                $.ajax({
                    url: '/PagosEmitidos/ObtenerFacturasPorProveedor',
                    type: 'GET',
                    data: { proveedorId: proveedorId },
                    success: function (data) {
                        if (data.length > 0) {
                            $('#facturaSelect').empty();
                            $('#facturaSelect').append('<option value="">Seleccione una factura</option>');
                            $.each(data, function (index, item) {
                                $('#facturaSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                            });
                            $('#facturaMessage').hide();
                        } else {
                            $('#facturaSelect').empty();
                            $('#facturaMessage').show();
                        }

                        // $.each(data, function (index, item) {
                        //     $('#facturaSelect').append('<option value="' + item.Value + '">' + item.Text + '</option>');
                        // });
                    },
                    error: function (error) {
                        console.error('Error al obtener las facturas: ', error);
                    }
                });
            });
            $('#facturaSelect').change(function () {
                var facturaId = $(this).val();

                $.ajax({
                    url: '/PagosEmitidos/ObtenerFactura',
                    type: 'GET',
                    data: { facturaId: facturaId },
                    success: function (data) {
                        montoFacturaOriginal = parseFloat(data.monto);
                        if (montoAnticipo != 0 && selectOptionAnticipo) {
                            var precioTotal = montoFacturaOriginal - montoAnticipo;
                            $('#montoInput').val(precioTotal);
                        }else{
                            $('#montoInput').val(data.monto);
                        }

                        $('#concepto').val(data.descripcion);
                        $('#RetIvaInput').val(data.iva);
                        $('#RetIslrInput').val(data.islr);

                     
                        // Permitir la edición del campo de monto
                        $('#montoInput').prop('disabled', false);
                    },
                    error: function (error) {
                        console.error('Error al obtener las facturas: ', error);
                    }
                });
            });
            $('#montoInput').on('input', function () {
                var montoInput = parseFloat($(this).val());

                if (montoInput > montoFacturaOriginal && montoAnticipo==0) {
                    // Si el monto ingresado es mayor, mostrar un mensaje o deshacer la edición
                    alert('El monto ingresado no puede ser mayor al monto de la factura.');
                    $(this).val(montoFacturaOriginal);
                }
                if (montoFacturaOriginal < montoInput) {
                    alert('El monto ingresado no puede ser mayor al monto de la factura.');
                    if (montoAnticipo != 0 && selectOptionAnticipo){
                        var precioTotal = montoFacturaOriginal - montoAnticipo;
                        $('#montoInput').val(precioTotal);
                    }else{
                        $(this).val(montoFacturaOriginal);
                    }
                }
                // if (montoAnticipo != 0 && montoInput != montoAnticipo){
                //     alert('El monto ingresado no puede ser diferente al del anticipo.');
                //     // $(this).val(montoAnticipo);
                //     $('#montoInput').val(montoAnticipo);

                // }
            });

            $('#basicSelectAnticipos').change(function () {
                var opcionSeleccionada = $(this).val();

                if (opcionSeleccionada === 'Si') {
                    var proveedorId = $('#proveedorSelect').val();
                    selectOptionAnticipo = true;

                    obtenerAnticiposPorProveedor(proveedorId);
                } else {
                    selectOptionAnticipo = false;
                    $('.anticipo-group').hide();
                    $('#montoInput').val(montoFacturaOriginal);

                    // Ocultar el grupo de anticipos
                    // $('#montoInput').prop('readonly', false); // Deshabilitar el campo
                }
            });
           
            function obtenerAnticiposPorProveedor(proveedorId) {
                $.ajax({
                    url: '/PagosEmitidos/ObtenerAnticiposPorProveedor',
                    type: 'GET',
                    data: { proveedorId: proveedorId },
                    success: function (data) {
                        datAnticipo = data;
                        $('#basicSelect').empty();
                        $('#basicSelect').append('<option value="">Seleccione un anticipo</option>');

                        $.each(data, function (index, item) {
                            $('#basicSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                        // $('#montoInput').val(data.saldo);
                        // $('#montoInput').prop('disabled', true); // Deshabilitar el campo
                        $('.anticipo-group').show();  // Mostrar el grupo de anticipos
                    },
                    error: function (error) {
                        console.error('Error al obtener los anticipos: ', error);
                    }
                });
            }
            $('#basicSelect').change(function () {
                var opcionSeleccionada = $(this).val();
                var selectedAnticipo = datAnticipo.find(item => item.value == opcionSeleccionada);
                if (selectedAnticipo) {
                    var precioSeleccionado = selectedAnticipo.precio;
                    montoAnticipo = precioSeleccionado;
                    if (montoAnticipo > montoFacturaOriginal) {
                        alert('El monto del anticipo es mayor a la factura, por favor seleccione otra opción.');
                        $('#montoInput').val(montoFacturaOriginal);
                        $('#basicSelect').val('Seleccione un anticipo.'); // Restablecer el valor del select
                    }else{
                        var precioTotal = montoFacturaOriginal - montoAnticipo;
                        $('#montoInput').val(precioTotal);
                    }
                    // $('#montoInput').prop('disabled', true);
                } 
            });
        });
    </script>

