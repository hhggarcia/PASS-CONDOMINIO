@model IEnumerable<Prueba.Models.MonedaCond>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}


<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a asp-action="Create" class="btn btn-light">Crear Nuevo</a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Monedas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Princinpal)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Simbolo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ValorDolar)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdCondominioNavigation)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.IdMonedaNavigation)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Princinpal)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Simbolo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ValorDolar)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdCondominioNavigation.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IdMonedaNavigation.Nombre)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.IdMonedaCond">Editar</a> |
                                                    <a asp-action="Details" asp-route-id="@item.IdMonedaCond">Detalles</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.IdMonedaCond">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
