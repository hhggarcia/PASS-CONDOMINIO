@model Prueba.Models.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a asp-action="Index" class="btn btn-light">Volver</a>
    </div>
    <!-- Content Row -->
    <div class="row justify-content-center">

        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Propiedades
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="CrearInquilino">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h6>Crear Inquilino</h6>
                        <hr />

                        <!--Primer Nombre -->
                        <div class="col-md-6 col-12">
                            <div class="form-group has-icon-left mandaory">
                                <label asp-for="FirstName"></label>
                                <div class="position-relative">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="First name"
                                           id="first-name-icon"
                                           asp-for="FirstName"
                                           aria-required="true" />
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <!--Segundo Nombre -->

                        <div class="col-md-6 col-12">
                            <div class="form-group has-icon-left mandaory">
                                <label asp-for="LastName"></label>
                                <div class="position-relative">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Last name"
                                           id="first-name-icon"
                                           asp-for="LastName"
                                           aria-required="true" />
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <!--Email -->

                        <div class="col-md-6 col-12">
                            <div class="form-group has-icon-left mandaory">
                                <label asp-for="Email"></label>
                                <div class="position-relative">
                                    <input type="email"
                                           class="form-control"
                                           placeholder="Email"
                                           id="first-name-icon"
                                           asp-for="Email"
                                           aria-required="true" />
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!--Password -->

                        <div class="col-md-6 col-12">
                            <div class="form-group has-icon-left mandaory">
                                <label asp-for="Password"></label>
                                <div class="position-relative">
                                    <input type="password"
                                           class="form-control"
                                           placeholder="Password"
                                           id="first-name-icon"
                                           asp-for="Password"
                                           aria-required="true" />
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6 col-12">
                            <div class="form-group has-icon-left mandaory">
                                <label asp-for="ConfirmPassword"></label>
                                <div class="position-relative">
                                    <input type="password"
                                           class="form-control"
                                           placeholder="Password"
                                           id="first-name-icon"
                                           asp-for="ConfirmPassword"
                                           aria-required="true" />
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}