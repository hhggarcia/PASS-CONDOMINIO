@model IEnumerable<Prueba.ViewModels.ReciboCuotaVM>

@{
    ViewData["Title"] = "Recibos Cuotas Especiales";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Cuotas Especiales
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Propiedad</th>
                                    <th>Cuota Especial</th>
                                    <th>Sub Cuota</th>
                                    <th>Fecha</th>
                                    <th>En proceso</th>
                                    <th>Confirmado</th>
                                    <th>Cuotas Faltantes</th>
                                    <th>Cuotas Pagadas</th>
                                    <th>Abonado</th>
                                    <th>Valor dolar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                @*                                 @if (Model.Count() == 0)
                                *@
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="tr_s">
                                            <td>@item.ReciboCuota.IdPropiedad</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.ReciboCuota.SubCuotas?.ToString("N2") Bs.</td>
                                            <td>@item.ReciboCuota.Fecha?.ToString("dd/MM/yyyy") </td>
                                            <td>@((bool)item.ReciboCuota.EnProceso ? "Sí" : "No")</td>
                                            <th>@((bool)item.ReciboCuota.Confirmado ? "Sí" : "No")</th>
                                            <td>@item.ReciboCuota.CuotasFaltantes</td>
                                            <td>@item.ReciboCuota.CuotasPagadas</td>
                                            <td>@item.ReciboCuota.Abonado?.ToString("N2") Bs.</td>
                                            <td>@item.ReciboCuota.ValorDolar?.ToString("N2") Bs.</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="tr_s">
                                        <td>No</td>
                                        <td>hay</td>
                                        <td>cuotas</td>
                                        <td>especiales</td>
                                        <td></td>
                                        <td> </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>