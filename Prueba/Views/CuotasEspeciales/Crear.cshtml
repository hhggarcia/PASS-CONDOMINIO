@model Prueba.Models.CuotasEspeciale

@{
    ViewData["Title"] = "Crear cuota especial";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Crear una nueva cuota especial
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <form method="post" asp-action="Crear">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="last-name-column">Descripción</label>
                                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Descripción"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Descripcion" />
                                        </div>   
                                    </div>
                                    <div class="col-md-6">
                                        <label for="last-name-column">Cantidad de cuotas</label>
                                        <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                                        <div class="position-relative">
                                            <input type="number"
                                                   class="form-control"
                                                   placeholder="Cantidad de Cuotas"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="CantidadCuotas" />
                                        </div>
                                    </div>     
                             
                                    <div class="col-md-6 mt-3">
                                            <label for="last-name-column">Monto</label>
                                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="0"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="MontoTotal" />
                                        </div>
                                    </div>
                                     <div class="col-md-6 mt-3">
                                            <label for="last-name-column">Fecha</label>
                                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                        <div class="position-relative">
                                            <input
                                                   class="form-control"
                                                   placeholder="Fecha"
                                                   id="first-name-icon"
                                                   required
                                                   value="@DateTime.Today"
                                                   asp-for="FechaInicio" />
                                        </div>
                                    </div>  
                                    <div class="col-md-6 mt-3">
                                        <label for="last-name-column">¿Desea activar la cuota?</label>
                                        <select asp-for="Activa" id='mySelect' class="form-select nav-tabs-selector">
                                            <option value="true">
                                                Si
                                            </option>
                                            <option value="false">
                                                No
                                            </option>
                                        </select>
                                    </div>  
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Editar" class="btn btn-primary" />
                                </div>
                            </form>
                       
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>

