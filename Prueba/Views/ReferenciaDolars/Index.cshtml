@model IEnumerable<Prueba.Models.ReferenciaDolar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">

    <p>
        <a asp-action="Create" class="btn btn-light">Crear Nuevo</a>
        @*<a asp-action="Index" asp-controller="Estacionamientos" class="btn btn-light">Volver</a>*@

    </p>

    <div class="row">
        <div class="col-lg-12">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Referencias Dólar
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Valor)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Fecha)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Valor)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Fecha)
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.IdReferencia">Editar</a> |
                                                    <a asp-action="Details" asp-route-id="@item.IdReferencia">Detalles</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.IdReferencia">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
