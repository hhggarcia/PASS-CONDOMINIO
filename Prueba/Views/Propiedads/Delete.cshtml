@model Prueba.Models.Propiedad

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Propiedades
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">
                                <h6>Are you sure you want to delete this?</h6>
                                <div>
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Codigo)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Codigo)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Dimensiones)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Dimensiones)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Alicuota)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Alicuota)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Solvencia)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Solvencia)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Saldo)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Saldo)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Deuda)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Deuda)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.IdInmuebleNavigation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.IdInmuebleNavigation.IdInmueble)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
                                        </dd>
                                    </dl>
                                </div>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="IdPropiedad" />
                                    <input type="submit" value="Eliminar" class="btn btn-danger" /> 
                                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
