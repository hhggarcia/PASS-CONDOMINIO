@model Prueba.Models.Condominio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";

}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Condominios
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdCondominio" />
                                <div class="form-group">
                                    <label asp-for="IdAdministrador" class="control-label"></label>
                                    <select asp-for="IdAdministrador" class="form-control" asp-items="ViewBag.IdAdministrador"></select>
                                    <span asp-validation-for="IdAdministrador" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label"></label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Direccion" class="control-label"></label>
                                    <input asp-for="Direccion" class="form-control" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Rif" class="control-label"></label>
                                    <input asp-for="Rif" class="form-control" />
                                    <span asp-validation-for="Rif" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tipo" class="control-label"></label>
                                    <input asp-for="Tipo" class="form-control" />
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>                                
                                <div class="form-group">
                                    <label class="control-label">Mora %</label>
                                    <input asp-for="InteresMora" class="form-control" />
                                    <span asp-validation-for="InteresMora" class="text-danger"></span>
                                </div>                                
                                
                                @* <div class="form-group">
                                    <label asp-for="ContribuyenteEspecial" class="control-label"></label>
                                    <input asp-for="ContribuyenteEspecial" class="form-control" />
                                    <span asp-validation-for="ContribuyenteEspecial" class="text-danger"></span>
                                </div> *@
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="ContribuyenteEspecial" /> @Html.DisplayNameFor(model => model.ContribuyenteEspecial)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Indexación %</label>
                                    <input asp-for="Multa" class="form-control" />
                                    <span asp-validation-for="Multa" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ClaveCorreo" class="control-label"></label>
                                    <input asp-for="ClaveCorreo" class="form-control" />
                                    <span asp-validation-for="ClaveCorreo" class="text-danger"></span>
                                </div>
                                @* <div class="form-group">
                                    <label class="control-label">Cuenta para Pagos de Propietarios</label>
                                    <input asp-for="IdCodCuenta" class="form-control" />
                                    <span asp-validation-for="IdCodCuenta" class="text-danger"></span>
                                </div> *@
                                <div class="form-group">
                                    <label asp-for="IdCodCuenta" class="control-label"></label>
                                    <select asp-for="IdCodCuenta" class="form-control" asp-items="ViewBag.IdCodCuenta"></select>
                                </div>
                                <div class="form-group pt-2">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-controller="Administrador" asp-action="Dashboard" asp-route-id="@Model.IdCondominio" class="btn btn-secondary">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>