@using Prueba.ViewModels

@model ComprobanteVM

@{
    ViewData["Title"] = "Pagos";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-center mb-4">
        @*<h1 class="h3 mb-0 text-gray-800">Comprobante</h1>*@
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 mb-4">


            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Comprobante
                    </h6>

                </div>
                <div class="card-body">
                    <div class="form row text-center">

                        <div class="form-group has-icon-left">
                            <div class="position-relative">

                                <h3>Condominio</h3>
                                @if (Model.Condominio != null
                                && Model.Propiedad != null)
                                {
                                    <p><strong>Condominio</strong>: @Model.Condominio.Nombre</p>
                                    @* <p><strong>Inmueble</strong>: </p> *@
                                    <p><strong>Propiedad</strong>: @Model.Propiedad.Codigo</p>
                                    <hr />
                                    <p><strong>Deuda</strong>: @Model.Propiedad.Deuda.ToString("N2") Bs.</p>
                                    <p><strong>Monto Mora</strong>: @Model.Propiedad.MontoIntereses.ToString("N2") Bs.</p>
                                    <p><strong>Monto Indexación</strong>: @(((decimal)Model.Propiedad.MontoMulta).ToString("N2")) Bs.</p>
                                    @* <p><strong>Saldo Actual</strong>: @Model.Propiedad.Saldo.ToString("N2") Bs.</p> *@
                                    <hr />
                                    <p><strong>Saldo Actual</strong>: @((Model.Propiedad.Deuda + Model.Propiedad.MontoIntereses + (decimal)Model.Propiedad.MontoMulta + Model.Propiedad.Saldo).ToString("N2")) Bs.</p>
                                }
                            </div>
                        </div>

                        <div class="form-group has-icon-left">
                            <div class="position-relative">

                                @if (Model.PagoRecibido != null)
                                {

                                    @if (Model.PagoRecibido.FormaPago
                                   && Model.Referencias != null)
                                    {
                                        <h3>Transferencia</h3>
                                        <p><strong>Fecha</strong>: @Model.PagoRecibido.Fecha.ToString("dd/MM/yyyy")</p>

                                        <p><strong>Cuenta</strong>: @Model.Referencias.Banco</p>
                                        <p><strong>Referencia</strong>: @Model.Referencias.NumReferencia</p>
                                        <p><strong>Monto</strong>: @(Model.PagoRecibido.Monto.ToString("N2"))</p>
                                        <p><strong>Fecha de comprobante</strong>: @DateTime.Today.ToString("dd/MM/yyyy")</p>
                                    }
                                    else
                                    {
                                        <h3>Efectivo</h3>
                                        <p><strong>Monto</strong>: @(Model.PagoRecibido.Monto.ToString("N2")) Bs.</p>
                                        <p><strong>Fecha de comprobante</strong>: @(DateTime.Today.ToString("dd/MM/yyyy"))</p>
                                    }
                                }


                            </div>
                        </div>

                    </div>

                </div>

                <div class="text-center mb-4">
                    <h4 class="text-center">@Model.Mensaje</h4>

                    <a asp-controller="PagoRecibidos" asp-action="RegistrarPagosAdmin"
                       class="btn btn-primary me-1 mb-1">
                        Realizar otro pago
                    </a>
                    <a asp-controller="PagoRecibidos" asp-action="PagosConfirmados"
                       class="btn btn-primary me-1 mb-1">
                        Finalizar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


