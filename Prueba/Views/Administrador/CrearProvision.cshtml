@model CrearProvisionVM
@{
}

<h3>Crear Provision</h3>

<form asp-action="CrearProvision">
    <label>Provisiones</label>
    <select asp-for="IdcodCuenta" asp-items="Model.Provisiones">
        <option value="">Seleccione una provision</option>
    </select>

    <label>Gastos</label>
    <select asp-for="IdGasto" asp-items="Model.Gastos">
        <option value="">Seleccione el gasto asignado</option>
    </select>

    <label asp-for="Concepto"></label>
    <input type="text" asp-for="Concepto"/>

    <label>Monto a porvisionar</label>
    <input type="number" asp-for="Monto" />

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="RelaciondeGastos" class="btn">Volver</a>
</form>
