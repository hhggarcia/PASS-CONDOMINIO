@model RegistroPagoVM
@{
    ViewData["Title"] = "Registrar Pagos";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Registrar Pagos</h1>
    </div>

    <!-- Content Row -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Reporta aquí cada pago que realizes
                    </h6>
                </div>
                <div class="card-body">

                    <!-- Inicio -->
                    <form class="form form-horizontal" asp-action="RegistrarPagosPost">
                        <div class="form-body">
                            <div class="row">



                                <!-- Concepto -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="last-name-column">Concepto</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Concepto"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Concepto" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-building"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Descripcion -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="last-name-column">Descripcion</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Descripcion"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Descripcion" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-building"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*                                <!-- Tipo Operacion -->
                                <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left mandaory">
                                <label for="last-name-column">Tipo Operacion</label>
                                <div class="position-relative">
                                <fieldset class="form-group">
                                <select class="form-select" id="basicSelect"
                                asp-for="TipoOperacion" asp-items="Html.GetEnumSelectList<TipoOperacion>()">
                                </select>
                                </fieldset>
                                </div>
                                </div>
                                </div>*@

                                <!-- Monto -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left mandaory">
                                        <label for="last-name-column">Monto</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Name"
                                                   id="first-name-icon"
                                                   asp-for="Monto" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Fecha -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="last-name-column">Fecha</label>
                                        <div class="position-relative">
                                            <input type="date"
                                                   class="form-control"
                                                   placeholder="Name"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Fecha" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-calendar-date"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Subcuentas -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left mandaory">
                                        <label for="last-name-column">Sub Cuentas</label>
                                        <div class="position-relative">
                                            <fieldset class="form-group">
                                                <select class="form-select" id="basicSelect"
                                                        asp-for="IdSubcuenta" asp-items="Model.SubCuentasGastos">
                                                    <option value="">Seleccione la Sub Cuenta a pagar</option>
                                                </select>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>

                                

                                <div class="col-md-12 col-12">
                                    <div class="form-group has-icon-left mandaory">
                                        <label for="last-name-column">Método de Pago</label>
                                        <div class="position-relative">
                                            <div class="tab-area">

                                                <form class="col-sm-5">

                                                    <select asp-for="Pagoforma" id='mySelect' class="form-select nav-tabs-selector">

                                                        <option value="0">

                                                            Efectivo
                                                        </option>
                                                        <option value="1">

                                                            Transferencia
                                                        </option>
                                                        
                                                    </select>
                                                </form>

                                                <ul class="nav nav-tabs" id="myTab">
                                                    <li class="active"><a href="#home"></a></li>
                                                    <li><a href="#profile"></a></li>
                                                    <li><a href="#messages"></a></li>
                                                    <li><a href="#settings"></a></li>
                                                </ul>

                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="home">
                                                        <!-- Efectivo -->
                                                        <div class="card-body">
                                                            <div class="form form-horizontal">
                                                                <div class="form-body">
                                                                    <div class="row">

                                                                        <!-- Tipo de Banco -->
                                                                        <div class="col-md-6 col-12">
                                                                            <div class="form-group has-icon-left mandaory">
                                                                                @*                                                                        <label for="last-name-column">Banco</label>*@
                                                                                <div class="position-relative">
                                                                                    <fieldset class="form-group">
                                                                                        <select asp-for="IdCodigoCuentaCaja"
                                                                                                asp-items="Model.SubCuentasCaja"
                                                                                                class="form-select" id="basicSelect">
                                                                                            <option value="0">Seleccione un tipo de efectivo</option>
                                                                                        </select>
                                                                                    </fieldset>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane" id="profile">
                                                        <!-- Transferencia -->
                                                        <div class="card-body">
                                                            <div class="form form-horizontal">
                                                                <div class="form-body">
                                                                    <div class="row">
                                                                        <!-- Pago Emitido -->
                                                                        <div class="col-md-6 col-12">
                                                                            <div class="form-group has-icon-left">
                                                                                <label for="last-name-column">Número de Referencia</label>
                                                                                <div class="position-relative">
                                                                                    <input type="number" class="form-control"
                                                                                           placeholder="Referencia" id="first-name-icon" required=""
                                                                                           asp-for="NumReferencia">
                                                                                    <div class="form-control-icon">
                                                                                        <i class="bi bi-credit-card"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <!-- Tipo de Banco -->
                                                                        <div class="col-md-6 col-12">
                                                                            <div class="form-group has-icon-left mandaory">
                                                                                <label for="last-name-column">Banco</label>
                                                                                <div class="position-relative">
                                                                                    <fieldset class="form-group">
                                                                                        <select asp-for="IdCodigoCuentaBanco"
                                                                                                asp-items="Model.SubCuentasBancos"
                                                                                                class="form-select" id="basicSelect">
                                                                                            <option value="0">Seleccione un banco</option>
                                                                                        </select>
                                                                                    </fieldset>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                





                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Enviar
                                    </button>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Row -->
</div>
<!-- /.container-fluid -->




