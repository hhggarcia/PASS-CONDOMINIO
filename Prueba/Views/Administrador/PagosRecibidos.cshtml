@model IndexPagoRecibdioVM

@{
    ViewData["Title"] = "Pagos Recibidos";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        @*<h1 class="h3 mb-0 text-gray-800">Pagos Recibidos</h1>*@
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Illustrations -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Verifique los Pagos Recibidos
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Propietario</th>
                                    <th>Propiedad</th>
                                    <th>Concepto</th>
                                    <th>Monto</th>
                                    <th>Forma de Pago</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Propietario</th>
                                    <th>Propiedad</th>
                                    <th>Concepto</th>
                                    <th>Monto</th>
                                    <th>Forma de Pago</th>
                                </tr>
                            </tfoot>
                            @if (Model.UsuariosPropiedad != null
                            && Model.UsuariosPropiedad.Count() > 0
                            && Model.PropiedadPagos != null
                            && Model.PropiedadPagos.Count() > 0)
                            {
                                @foreach (var diccUsuarioPropiedad in Model.UsuariosPropiedad)
                                {
                                    <tbody>

                                        <tr>

                                            @foreach (var propiedad in @diccUsuarioPropiedad.Value)
                                            {
                                                @if (propiedad.Saldo > 0 || propiedad.Deuda > 0)
                                                {
                                                    @foreach (var propiedadPago in Model.PropiedadPagos)
                                                    {
                                                        @if (propiedadPago.Key.IdPropiedad == propiedad.IdPropiedad)
                                                        {
                                                            @foreach (var pago in propiedadPago.Value)
                                                            {
                                                                <td>@(pago.Fecha.ToString("dd/MM/yyyy"))</td>
                                                                <td>@diccUsuarioPropiedad.Key.FirstName @diccUsuarioPropiedad.Key.LastName</td>
                                                                <td>@propiedad.Codigo</td>
                                                                <td>@pago.Concepto</td>
                                                                <td>@(pago.Monto.ToString("N"))</td>
                                                                if (pago.FormaPago)
                                                                {
                                                                    <td>Transferencia</td>
                                                                }
                                                                else
                                                                {
                                                                    <td>Efectivo</td>
                                                                }
                                                                <td>
                                                                    @*<button type="button"
                                                                    class="btn btn-outline-success"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#exampleModalScrollable">*@
                                                                    <a class="btn btn-outline-success"
                                                                       asp-controller="Administrador"
                                                                       asp-action="ConfirmarPagoRecibido"
                                                                       asp-route-id="@pago.IdPagoRecibido">
                                                                        Confirmar Pago
                                                                    </a>
                                                                </td>
                                                                @*<td>Pagado</td>*@
                                                            }

                                                        }
                                                    }
                                                }
                                            }
                                        </tr>
                                    </tbody>
                                }

                            }
                            else
                            {
                                <tbody>
                                    <tr>
                                        <td>No</td>
                                        <td>hay</td>
                                        <td>pagos</td>
                                        <td>recibidos</td>
                                        <td>por</td>
                                        <td>confirmar</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


