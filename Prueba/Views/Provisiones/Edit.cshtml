@model Prueba.Models.Provision

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Provisiones
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdProvision" />
                                <div class="form-group">
                                    <label asp-for="IdCodGasto" class="control-label"></label>
                                    <select asp-for="IdCodGasto" class="form-control" asp-items="ViewBag.IdCodGasto"></select>
                                    <span asp-validation-for="IdCodGasto" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdCodCuenta" class="control-label"></label>
                                    <select asp-for="IdCodCuenta" class="form-control" asp-items="ViewBag.IdCodCuenta"></select>
                                    <span asp-validation-for="IdCodCuenta" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Monto" class="control-label"></label>
                                    <input type="number" asp-for="Monto" class="form-control" />
                                    <span asp-validation-for="Monto" class="text-danger"></span>
                                </div>
                                <!-- Moneda -->
                                <div class="form-group">
                                    <label asp-for="SimboloMoneda" class="control-label"></label>
                                    <select asp-for="SimboloMoneda" class="form-control" asp-items="ViewBag.IdMoneda"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaInicio" class="control-label"></label>
                                    <input asp-for="FechaInicio" class="form-control" />
                                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaFin" class="control-label"></label>
                                    <input asp-for="FechaFin" class="form-control" />
                                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                                </div>
                                @*<div class="form-group">
                                    <label asp-for="MontoRef" class="control-label"></label>
                                    <input asp-for="MontoRef" class="form-control" />
                                    <span asp-validation-for="MontoRef" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ValorDolar" class="control-label"></label>
                                    <input asp-for="ValorDolar" class="form-control" />
                                    <span asp-validation-for="ValorDolar" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SimboloMoneda" class="control-label"></label>
                                    <input asp-for="SimboloMoneda" class="form-control" />
                                    <span asp-validation-for="SimboloMoneda" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SimboloRef" class="control-label"></label>
                                    <input asp-for="SimboloRef" class="form-control" />
                                    <span asp-validation-for="SimboloRef" class="text-danger"></span>
                                </div>*@
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-controller="RelacionGastos" asp-action="RelaciondeGastos" class="btn btn-secondary">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
