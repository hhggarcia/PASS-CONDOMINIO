@model IEnumerable<Prueba.Models.ComprobanteRetencion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="ComprobanteRetencions"
           asp-action="Create">
            Registrar
        </a>
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
        @*         <a type="button" id="create_pdf" value="Generate PDF" href="#" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        PDF
        </a> *@
        @* <button type="button" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm" id="PagosEmitidos">Crear pdf</button> *@

        @* <a value="Export" onclick="fnExcelReport();" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        Excel
        </a> *@
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Comprobante Retención
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaEmision)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Retencion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Sustraendo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ValorRetencion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TotalImpuesto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdFacturaNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdProveedorNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaEmision)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Retencion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sustraendo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ValorRetencion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalImpuesto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdFacturaNavigation.IdFactura)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdProveedorNavigation.IdProveedor)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdComprobante">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdComprobante">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdComprobante">Eliminar</a> |
                                            <a asp-action="PrintComprobante" asp-route-id="@item.IdComprobante">Imprimir</a> |
                                            <a asp-action="ComprobantePDF" asp-route-id="@item.IdComprobante">Descargar PDF</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



