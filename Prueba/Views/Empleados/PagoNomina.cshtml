            $('#basicSelectAnticipos').change(function () {
                var opcionSeleccionada = $(this).val();

                if (opcionSeleccionada === 'Si') {
                    var proveedorId = $('#proveedorSelect').val();
                    selectOptionAnticipo = true;

                    obtenerAnticiposPorProveedor(proveedorId);
                } else {
                    selectOptionAnticipo = false;
                    $('.anticipo-group').hide();
                    $('#montoInput').val(montoFacturaOriginal);

                    // Ocultar el grupo de anticipos
                    // $('#montoInput').prop('readonly', false); // Deshabilitar el campo
                }
            });

            function obtenerAnticiposPorProveedor(proveedorId) {
                $.ajax({
                    url: '/PagosEmitidos/ObtenerAnticiposPorProveedor',
                    type: 'GET',
                    data: { proveedorId: proveedorId },
                    success: function (data) {
                        datAnticipo = data;
                        $('#basicSelect').empty();
                        $('#basicSelect').append('<option value="">Seleccione un anticipo</option>');

                        $.each(data, function (index, item) {
                            $('#basicSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                        // $('#montoInput').val(data.saldo);
                        // $('#montoInput').prop('disabled', true); // Deshabilitar el campo
                        $('.anticipo-group').show();  // Mostrar el grupo de anticipos
                    },
                    error: function (error) {
                        console.error('Error al obtener los anticipos: ', error);
                    }
                });
            }
            $('#basicSelect').change(function () {
