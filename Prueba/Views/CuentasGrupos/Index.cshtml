@model IEnumerable<Prueba.Models.CuentasGrupo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        @*<h1 class="h3 mb-0 text-gray-800">Pagos Emitidos</h1>*@
        <a class="btn btn-light mb-3" asp-controller="CuentasGrupos"
           asp-action="Create">
            Registrar
        </a>
        <a class="btn btn-light mb-3" asp-controller="GrupoGastos"
           asp-action="Create">
            Crear Grupo
        </a>
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
        <a type="button" id="create_pdf" value="Generate PDF" href="#" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Generar
            PDF
        </a>

    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Grupos de Gastos
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCodCuentaNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdGrupoGastoNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCodCuentaNavigation.IdCodCuenta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdGrupoGastoNavigation.IdGrupoGasto)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdCuentaGrupos">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdCuentaGrupos">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdCuentaGrupos">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


