@model IEnumerable<Prueba.ViewModels.ReciboCuotaVM>

    @{
        ViewData["Title"] = "Recibo Cuotas Especiales";
    }
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-around mb-4">

    @*     <a type="button" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm" asp-action="ReciboPdf" asp-controller="Propietarios">Crear pdf</a>
        <a value="Export" onclick="fnExcelReport();" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Generar
            Excel
        </a> *@
    </div>
    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Illustrations -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Verifique el estado de sus recibos
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-bordered form"
                                   id="dataTable"
                                   width="100%"
                                   cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Número de recibo</th>
                                        <th>Propiedad</th>
                                        <th>Fecha</th>
                                        <th>Monto Mensual</th>
                                        <th>Monto Total Cuota</th>
                                        <th>Abonado</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Número de recibo</th>
                                        <th>Propiedad</th>
                                        <th>Fecha</th>
                                        <th>Monto Mensual</th>
                                        <th>Monto Total Cuota</th>
                                        <th>Abonado</th>
                                        <th>Estado</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="tr_s">
                                            <td>@item.ReciboCuota.IdReciboCuotas</td>
                                            <td>@item.Codigo</td>
                                            <td>@item.ReciboCuota.Fecha?.ToString("dd/MM/yyyy")</td>
                                            @if (!(bool)item.ReciboCuota.Confirmado)
                                            {
                                                <td>@string.Format("{0:N2}", ((item.ReciboCuota.SubCuotas * (item.ReciboCuota.CuotasFaltantes + item.ReciboCuota.CuotasPagadas)) / item.ReciboCuota.CuotasFaltantes) / (item.ReciboCuota.CuotasPagadas + item.ReciboCuota.CuotasFaltantes)) @item.ReciboCuota.SimboloMoneda</td>
                                            }else{
                                                <td>@item.ReciboCuota.SubCuotas?.ToString("N2") @item.ReciboCuota.SimboloMoneda</td>
                                            }
                                            <td>@item.ReciboCuota.SubCuotas?.ToString("N2") @item.ReciboCuota.SimboloMoneda</td>
                                            <td>@item.ReciboCuota.Abonado?.ToString("N2") @item.ReciboCuota.SimboloMoneda</td>
                                            @if ((bool)@item.ReciboCuota.EnProceso)
                                            {
                                                <td>En proceso</td>
                                            }
                                            else if ((bool)@item.ReciboCuota.Confirmado)
                                            {
                                                <td>Pagado</td>
                                            }
                                            else
                                            {
                                                <td>En deuda</td>
                                            }
                                            <td>
                                                <a asp-controller="Propietarios"
                                                   asp-action="DetalleReciboCuotasEspeciales"
                                                   asp-route-id="@item.ReciboCuota.IdReciboCuotas" class="btn btn-primary">Detalles</a>
                                                @if (!(bool)item.ReciboCuota.Confirmado)
                                                {
                                                    <a asp-controller="Propietarios"
                                                       asp-action="PagarCuotaEspeciales"
                                                       asp-route-id="@item.ReciboCuota.IdReciboCuotas" class="btn btn-success">Pagar</a>
                                                }
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <h3>No existen cuotas para pagar.</h3>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
