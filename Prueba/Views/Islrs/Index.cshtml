@model IEnumerable<Prueba.Models.Islr>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="Islrs"
           asp-action="Create">
            Registrar
        </a>
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
        @*         <a type="button" id="create_pdf" value="Generate PDF" href="#" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        PDF
        </a> *@
        @* <button type="button" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm" id="PagosEmitidos">Crear pdf</button> *@

        @* <a value="Export" onclick="fnExcelReport();" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        Excel
        </a> *@
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Impuesto ISLR
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UnidadTributaria)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Factor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Concepto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Literal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TipoReceptor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Residente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Domiciliada)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BaseImponible)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tarifa)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MontoSujeto)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PagosMayores)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Sustraendo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnidadTributaria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Factor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Concepto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Literal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TipoReceptor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Residente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Domiciliada)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BaseImponible)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tarifa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MontoSujeto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PagosMayores)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sustraendo)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

