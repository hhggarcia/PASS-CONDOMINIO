@model Prueba.ViewModels.MonedaCuentasVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a asp-action="Create" class="btn btn-light">Registrar</a>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Monedas - Cuentas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Recibe Pagos
                                            </th>
                                            <th>
                                                Cuenta
                                            </th>
                                            <th>
                                                Saldo Inicial
                                            </th>
                                            <th>
                                                Saldo
                                            </th>                                            
                                            <th>
                                                Moneda
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.MonedaCuentas != null && Model.MonedaCuentas.Any()
                                        && Model.Codigos != null && Model.Codigos.Any()
                                        && Model.SubCuentas != null && Model.SubCuentas.Any())
                                        {
                                            @foreach (var item in Model.MonedaCuentas)
                                            {
                                                var idcc = Model.Codigos.Where(cc => cc.IdCodCuenta == item.IdCodCuenta).First();
                                                var subcuenta = Model.SubCuentas.Where(c => c.Id == idcc.IdCodigo).First();
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.RecibePagos)
                                                    </td>
                                                    <td>
                                                        @subcuenta.Descricion
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SaldoInicial)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SaldoFinal)
                                                    </td>
                                                    
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.IdMonedaNavigation.Simbolo)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                                    </td>
                                                </tr>
                                            }
                                        }                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>