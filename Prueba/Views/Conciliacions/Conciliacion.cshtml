@model Prueba.ViewModels.ItemConciliacionVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
    var saldo = Model.ConciliacionAnterior != null ? Model.ConciliacionAnterior.SaldoFinal : 0;
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" id="conciliar">
            Conciliar @(Model.SubCuenta != null ? Model.SubCuenta.Descricion : "")
        </a>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Conciliación Bancaria
                    </h6>
                    <partial name="_FiltroBanco" model="@(new Prueba.ViewModels.FiltroBancoVM(){ FechaFin = Model.FechaFin, FechaInicio = Model.FechaInicio})" />

                    <div class="tr_s">
                        <h6 class="m-0 font-weight-bold text-primary">Saldo Inicial: @saldo</h6>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Cuenta
                                    </th>
                                    <th>
                                        Concepto
                                    </th>
                                    <th>
                                        Ingreso
                                    </th>
                                    <th>
                                        Egreso
                                    </th>
                                    <th>
                                        Saldo
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr class="tr_s">
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th class="text-success">Total Ingreso: @(Model.TotalIngreso.ToString("N")) </th>
                                    <th class="text-danger">Total Egreso: @(Model.TotalEgreso.ToString("N")) </th>
                                    <th class="text-success">Saldo Final: @(Model.SaldoFinal.ToString("N")) </th>
                                </tr>
                            </tfoot>

                            <tbody>
                                @foreach (var item in Model.Asientos)
                                {
                                    <tr>
                                        <td>
                                            @item.Fecha.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @Model.SubCuenta.Descricion
                                        </td>
                                        <td>
                                            @item.Concepto
                                        </td>
                                        @if (item.TipoOperacion)
                                        {
                                            <td>
                                                @item.Monto.ToString("N")
                                            </td>
                                            <td></td>
                                            <td>
                                                @((saldo += item.Monto).ToString("N"))
                                            </td>


                                        }
                                        else
                                        {
                                            <td></td>
                                            <td>
                                                @item.Monto.ToString("N")
                                            </td>
                                            <td>
                                                @((saldo -= item.Monto).ToString("N"))
                                            </td>
                                        }

                                        <td>
                                            <a asp-asp-route-id="@item.IdAsiento" asp-action="" asp-controller="">Eliminar</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

