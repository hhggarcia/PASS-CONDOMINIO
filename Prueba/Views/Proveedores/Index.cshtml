@model IEnumerable<Prueba.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";

}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a class="btn btn-light mb-3" asp-controller="Proveedores"
           asp-action="Create">
            Registrar
        </a>
    </div>
    <div class="d-sm-flex align-items-center justify-content-around mb-4">
        @*         <a type="button" id="create_pdf" value="Generate PDF" href="#" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        PDF
        </a> *@
        @* <button type="button" class="d-sm-inline-block btn btn-sm btn-danger shadow-sm" id="PagosEmitidos">Crear pdf</button> *@

        @* <a value="Export" onclick="fnExcelReport();" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar
        Excel
        </a> *@
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Proveedores
                    </h6>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table text-center"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Direccion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rif)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Saldo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Representante)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContribuyenteEspecial)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCondominioNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdRetencionIslrNavigation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdRetencionIvaNavigation)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Direccion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rif)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Saldo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Representante)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContribuyenteEspecial)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCondominioNavigation.Nombre)
                                        </td>
                                        <td>
                                            @* @Html.DisplayFor(modelItem => item.IdRetencionIslrNavigation.Concepto) *@
                                            @item.IdRetencionIslrNavigation.Concepto
                                            @((item.IdRetencionIslrNavigation.Pjuridica) ? " PJ" : "")
                                            @((item.IdRetencionIslrNavigation.Pnatural) ? " PN" : "")
                                            @((item.IdRetencionIslrNavigation.Domiciliada) ? " Domiciliado" : "")
                                            @((item.IdRetencionIslrNavigation.NoDomiciliada) ? " No Domiciliado" : "")
                                            @((item.IdRetencionIslrNavigation.Residenciada) ? " Residenciada" : "")
                                            @((item.IdRetencionIslrNavigation.NoResidenciada) ? " No Residenciada" : "")    
                                            @item.IdRetencionIslrNavigation.Tarifa %
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdRetencionIvaNavigation.Descripcion)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.IdProveedor">Detalles</a> |
                                            <a asp-action="Delete" asp-route-id="@item.IdProveedor">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
