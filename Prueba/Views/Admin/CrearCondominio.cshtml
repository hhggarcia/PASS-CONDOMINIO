@using Prueba.Models;

@model NuevoCondominio
@{
    ViewData["Title"] = "Registrar Propiedades";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Crear Condominio</h1>
    </div>

    <!-- Content Row -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Rellene todos los campos.
                    </h6>
                </div>
                <div class="card-body">
                    <form class="form form-horizontal"
                          asp-action="CrearCondominioPost">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @*<input type="hidden" asp-for="Condominio.IdAdministrador" value="null" />
                        <input type="hidden" asp-for="Condominio.IdAdministradorNavigation" value="@adminNavigation" />*@

                        <div class="form-body">
                            <div class="row">

                                <!-- Nombre -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left mandaory">
                                        <label for="last-name-column">Nombre</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Nombre"
                                                   id="first-name-icon"
                                                   asp-for="Condominio.Nombre" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*<!-- Inmueble -->
                                <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left mandaory">
                                <label for="last-name-column">Inmueble</label>
                                <div class="position-relative">
                                <fieldset class="form-group">
                                <select class="form-select" id="basicSelect">
                                <option>Inmueble</option>
                                <option>Inmueble</option>
                                <option>Inmueble</option>
                                </select>
                                </fieldset>
                                </div>
                                </div>
                                </div>*@

                                <!-- Rif -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="last-name-column">Rif</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Rif"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Condominio.Rif" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-credit-card"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Tipo -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group has-icon-left">
                                        <label for="last-name-column">Tipo de Condominio</label>
                                        <div class="position-relative">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder="Tipo de Condominio"
                                                   id="first-name-icon"
                                                   required
                                                   asp-for="Condominio.Tipo" />
                                            <div class="form-control-icon">
                                                <i class="bi bi-credit-card"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Siguiente
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Row -->
</div>
