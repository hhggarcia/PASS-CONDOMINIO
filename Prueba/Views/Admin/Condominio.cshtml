
@{
    ViewData["Title"] = "Condiminios";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Condominios</h1>
    </div>

    <!-- Content Row -->
    <div class="row justify-content-center">
        <div class="col-xl-4 col-lg-4">
            <div class="card shadow mb-4 bg-content-bg">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Condominio
                    </h6>
                   
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="card card-profile">
                        <img src="https://demos.creative-tim.com/argon-dashboard/assets-old/img/theme/img-1-1000x600.jpg"
                             alt="Image placeholder"
                             class="card-img-top" />
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a href="#">
                                        <img src="~/images/users/1.jpg"
                                             class="rounded-circle" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                            <div class="d-flex justify-content-sm-between">
                                <br /><br class="d-xl-none d-lg-none d-md-none" />
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="text-center">
                                <h5 class="h3">
                                    Nombre 
                                </h5>
                                <h5 class="font-weight-300">
                                    Rif 
                                </h5>
                                <h5 class="h5 mt-4">
                                    Inmuebles 
                                </h5>
                                <h5 class="h5 mt-4">
                                    Administrador 
                                </h5>
                                
                                <div class="col-12 d-flex justify-content-center mt-4">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1"
                                            asp-controller="Admin"
                                            asp-action="RegistrarPuesto">
                                        Editar
                                    </button>
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1"
                                            asp-controller="Admin"
                                            asp-action="RegistroCondominio">
                                        Borrar
                                    </button>
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1"
                                            asp-controller="Admin"
                                            asp-action="RegistroCondominio">
                                        Ver
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <!-- Content Row -->
</div>
<!-- /.container-fluid -->
