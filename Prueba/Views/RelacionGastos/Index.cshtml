@model IEnumerable<Prueba.Models.RelacionGasto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a asp-action="RelaciondeGastos"
           class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Crear Nueva
        </a>       
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- Default Card Example -->
            <div class="card shadow mb-4 bg-content-bg">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Relación de Gastos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form form-horizontal">
                        <div class="form-body">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="card-body">
                                        <div class="table-responsive">

                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.SubTotal)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.TotalMensual)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Fecha)
                                                        </th>
                                                        @*<th>
                                                            @Html.DisplayNameFor(model => model.IdCondominioNavigation)
                                                        </th>*@
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.SubTotal)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.TotalMensual)
                                                            </td>
                                                            <td>
                                                                @*@Html.DisplayFor(modelItem => item.Fecha)*@
                                                                @(item.Fecha.ToString("dd/MM/yyyy"))
                                                            </td>
                                                            @*<td>
                                                                @Html.DisplayFor(modelItem => item.IdCondominioNavigation.IdCondominio)
                                                            </td>*@
                                                            <td>
                                                                @*<a asp-action="Edit" asp-route-id="@item.IdRgastos">Editar</a> |*@
                                                                <a asp-action="Details" asp-route-id="@item.IdRgastos">Detalles</a> 
                                                                @*<a asp-action="Delete" asp-route-id="@item.IdRgastos">Eliminar</a>*@
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
